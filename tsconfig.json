{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "boost": ["src/*"],
            "Atoms": ["src/js/patterns/atoms/*"],
            "Molecules": ["src/js/patterns/molecules/*"],
            "Organisms": ["src/js/patterns/organisms/*"],
            "Templates": ["src/js/patterns/templates/*"],
            "Icons": ["src/icons/*"]
        }
    },
    "include": ["src/js/**/*", "src/js/types/custom.d.ts"]
}
