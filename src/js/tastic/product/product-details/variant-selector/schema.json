{
    "tasticType": "frontastic/boost/product-details/variant-selector",
    "name": "Product variant selector",
    "category": "Product details",
    "icon": "list",
    "schema": [
        {
            "name": "Product configuration",
            "fields": [
                {
                    "label": "Data source filter",
                    "field": "stream",
                    "type": "stream",
                    "streamType": "product",
                    "default": null
                },
                {
                    "label": "IS selectable when only one option?",
                    "field": "isSingularSelectable",
                    "type": "boolean",
                    "default": true
                },
                {
                    "label": "Possible Attributes",
                    "field": "possibleAttributes",
                    "type": "group",
                    "itemLabelField": "label",
                    "min": 1,
                    "fields": [
                        {
                            "label": "Label",
                            "field": "label",
                            "required": true,
                            "type": "string"
                        },
                        {
                            "label": "Attribute",
                            "field": "attribute",
                            "required": true,
                            "type": "string",
                            "translatable": false
                        }
                    ]
                }
            ]
        }
    ]
}
