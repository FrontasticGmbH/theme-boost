                        },
                        {
                            "value": "xs",
                            "name": "Extra small (8px)"
                        },
                        {
                            "value": "sm",
                            "name": "Small (12px)"
                        },
                        {
                            "value": "md",
                            "name": "Medium (16px)"
                        },
                        {
                            "value": "lg",
                            "name": "Large (20px)"
                        },
                        {
                            "value": "xl",
                            "name": "Extra large (24px)"
                        }
                    ],
                    "default": "xl"
                },
                {
                    "label": "Space in px (overrides size field)",
                    "field": "spaceInPx",
                    "type": "integer",
