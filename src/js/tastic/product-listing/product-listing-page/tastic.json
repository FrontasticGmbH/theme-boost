{
    "tasticType": "frontastic/boost/product-listing/product-listing-page",
    "name": "Product listing page",
    "category": "Product listing",
    "icon": "list",
    "schema": [
        {
            "name": "Data source",
            "fields": [
                {
                    "label": "Data source filters",
                    "field": "stream",
                    "type": "stream",
                    "streamType": "product-list",
                    "default": null
                },
                {
                    "label": "Show facets",
                    "field": "showFacets",
                    "type": "boolean",
                    "default": true
                },
                {
                    "label": "Show next page",
                    "field": "showNextPage",
                    "type": "enum",
                    "default": "LoadMore",
                    "values": [
                        { "value": "None", "name": "None" },
                        { "value": "LoadMore", "name": "Load more button" },
                        { "value": "InfinityScroll", "name": "Infinity scroll" }
                    ]
                },
                {
                    "label": "Show products count label",
                    "field": "showProductsCount",
                    "type": "boolean",
                    "default": true
                },
                {
                    "label": "Show percentual reducement",
                    "field": "showPercent",
                    "type": "boolean",
                    "default": true
                },
                {
                    "label": "Show strike price",
                    "field": "showStrikePrice",
                    "type": "boolean",
                    "default": true
                }
            ]
        },

        {
            "name": "Sidebar",
            "fields": [
                {
                    "label": "Show sidebar",
                    "field": "showSidebar",
                    "type": "boolean",
                    "default": true
                },
                {
                    "label": "Sidebar header",
                    "field": "sidebarHeader",
                    "translatable": true,
                    "type": "string"
                },
                {
                    "label": "Navigation tree",
                    "field": "tree",
                    "type": "tree"
                }
            ]
        }
    ]
}
