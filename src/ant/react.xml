<?xml version="1.0" encoding="UTF-8"?>
<project name="React">
    <target name="react:start">
        <tool-exists executable="yarn" />

        <exec executable="yarn" failonerror="true" dir="${basedir}">
            <arg value="start" />
        </exec>
    </target>

    <target name="react:test" unless="${production}" extensionOf="-test-unit:main~hook">
        <tool-exists executable="yarn" />

        <exec executable="yarn" failonerror="true" dir="${basedir}">
            <env key="CI" value="true" />

            <arg value="run" />
            <arg value="test" />
        </exec>
    </target>

    <target name="react:check" unless="${production}" extensionOf="-test-static:main~hook">
        <tool-exists executable="yarn" />

        <exec executable="yarn" failonerror="${test_static_checkstyle_fail_on_violation}" dir="${basedir}">
            <env key="CI" value="true" />

            <arg value="run" />
            <arg value="check" />
        </exec>
    </target>

    <target name="react:package" extensionOf="-package:before~hook">
        <tool-exists executable="yarn" />

        <exec executable="yarn" failonerror="true" dir="${basedir}">
            <env key="CI" value="false" />

            <arg value="run" />
            <arg value="build-storybook" />
        </exec>

        <exec executable="git" failonerror="false" dir="${basedir}">
            <arg value="rm" />
            <arg value="-r" />
            <arg value="--force" />
            <arg value="${basedir}/../../../landingpage/public/docs/boost/storybook/*" />
        </exec>

        <copy todir="${basedir}/../../../landingpage/public/docs/boost/storybook/" >
            <fileset dir="${basedir}/storybook-static/" includes="**"/>
        </copy>

        <delete dir="${basedir}/storybook-static/" />

        <exec executable="git" failonerror="true" dir="${basedir}">
            <arg value="add" />
            <arg value="${basedir}/../../../landingpage/public/docs/boost/storybook/*" />
        </exec>
    </target>
</project>
