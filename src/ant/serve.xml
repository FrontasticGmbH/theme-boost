<?xml version="1.0" encoding="UTF-8"?>
<project name="Internal Server Task">
    <property name="webserver.host" value="localhost" />
    <property name="webserver.port" value="8080" />

    <target name="serve" depends="prepare">
        <echo>Server starting on http://${webserver.host}:${webserver.port}/</echo>
        <exec executable="${executable.php}" failonerror="true" dir="${basedir}">
            <arg value="-S" />
            <arg value="${webserver.host}:${webserver.port}" />
            <arg value="-t" />
            <arg value="src/htdocs/" />
            <arg value="bin/serve.php" />
        </exec>
    </target>
</project>
